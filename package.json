{
  "name": "musicapp",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "set NODE_ENV=test && mocha test/functional/api/test.js",
    "clean": "rimraf ./dist && mkdir dist",
    "lint": "esw  ./test ./routes ./models/ app.js bin/www ",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch",
    "test:report": "nyc mocha",
    "compile": "babel ./ --out-dir dist/ --ignore ./node_modules,./test --copy-files ",
    "start:prod": "cross-env NODE_ENV=dev node dist/bin/www",
    "start:watch": "cross-env NODE_ENV=dev nodemon --exec babel-node bin/www",
    "prebuild:dev": "npm-run-all test clean",
    "build:dev": "npm run compile",
    "postbuild:dev": "npm run start:prod",
    "build:release": "npm-run-all  test clean compile ",
    "postbuild:release": "rimraf dist/.git dist/test dist/nodemon.json"
  },
  "dependencies": {
    "chai-http": "^4.3.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "lodash": "^4.17.15",
    "mongodb": "^3.3.3",
    "mongodb-core": "^3.2.7",
    "mongodb-memory-server": "^6.0.1",
    "mongoose": "^5.7.7",
    "morgan": "~1.9.1",
    "supertest": "^4.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-things": "^0.2.0",
    "cross-env": "^6.0.3"
  }
}
